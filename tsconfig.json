{
    "compilerOptions": {
        "target": "es2017",
        "lib": [
            "dom",
            "es2018"
        ],
        "jsx": "react",
        "module": "ESNext",
        "moduleResolution": "node",
        "paths": {
            "@local/*": [
                "./resources/js/*"
            ],
            "@admin/*": [
                "./vendor/larabizcms/premium/react/*"
            ],
        },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "types": [
            "vite/client"
        ]
    },
    "include": [
        "vite.config.ts",
        "resources/js/**/*.ts",
        "resources/js/**/*.tsx",
        "vendor/larabizcms/premium/react/**/*.ts",
        "vendor/larabizcms/premium/react/**/*.tsx",
        "themes/**/src/**/*.ts",
        "themes/**/src/**/*.tsx",
        "themes/**/vite.config.ts",
        "modules/**/react/**/*.ts",
        "modules/**/react/**/*.tsx",
        "modules/**/vite.config.ts"
    ]
}
