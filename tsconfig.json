{
    "compilerOptions": {
        "target": "es2016",
        "lib": [
            "dom",
            "es2018"
        ],
        "jsx": "react",
        "module": "ESNext",
        //"rootDir": "./",
        "moduleResolution": "node",
        //"baseUrl": "./resources/js",
        "paths": {
            "@local/*": [
                "./resources/js/*"
            ],
            "@larabiz/*": [
                "./vendor/larabizcms/core/resources/js/*"
            ],
        },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "types": [
            "vite/client"
        ]
    },
    "include": [
        "vite.config.ts",
        "resources/js/**/*.ts",
        "resources/js/**/*.tsx",
        "packages/core/resources/js/**/*.ts",
        "packages/core/resources/js/**/*.tsx",
        "vendor/larabizcms/core/resources/js/**/*.ts",
        "vendor/larabizcms/core/resources/js/**/*.tsx"
    ]
}
