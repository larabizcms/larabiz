{
    "compilerOptions": {
        "target": "es2016",
        "lib": [
            "dom",
            "es2018"
        ],
        "jsx": "react",
        "module": "ESNext",
        "rootDir": "./",
        "moduleResolution": "node",
        //"baseUrl": "./resources/js",
        "paths": {
            "@/*": [
                "./resources/js/*"
            ],
            "@larabiz/*": [
                "./packages/core/resources/js/*"
            ],
        },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "types": ["vite/client", "node"]
    },
    "include": [
        "vite.config.mjs",
        "resources/js/**/*.ts",
        "resources/js/**/*.tsx",
        "packages/core/resources/js/**/*.ts",
    ]
}
